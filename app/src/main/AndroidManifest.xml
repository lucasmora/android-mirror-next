<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mirrornext">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/lancador"
        android:label="@string/app_name"
        android:logo="@mipmap/lancador"
        android:roundIcon="@mipmap/lancador_redondo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MirrorNext">
        <activity android:name=".TelaLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EsqueciMinhaSenha"
            android:parentActivityName=".TelaLogin">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mirrornext.TelaLogin" />
        </activity>
        <activity
            android:name=".Atalhos"
            android:parentActivityName=".TelaLogin">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mirrornext.TelaLogin" />
        </activity>
        <activity
            android:name=".TelaPrincipal"
            android:theme="@style/TemaTelaPrincipal"
            android:parentActivityName=".TelaLogin">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mirrornext.TelaLogin" />
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>